<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlab.coreyinfluence.activity.MyFavoriteA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y63"
        android:background="@color/text_yellow">

        <ImageView
            android:id="@+id/iv_back_my_favorite"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:padding="@dimen/x5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y13"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x15"
            android:src="@drawable/vector_ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y15"
            android:text="我的关注"
            android:textSize="@dimen/text_18"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_edit_my_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:text="编辑"
            android:textSize="@dimen/text_18"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_my_favorite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
