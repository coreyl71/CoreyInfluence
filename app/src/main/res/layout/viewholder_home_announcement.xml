<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_black"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_announcement_icon"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y14"
            android:layout_marginLeft="@dimen/x11"
            android:src="@drawable/vector_ic_home_announcement"/>

        <TextView
            android:id="@+id/tv_announcement_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y6"
            android:paddingBottom="@dimen/y6"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x12"
            android:maxLines="1"
            android:text="公告：红人苏小妍即将上市，2017年5月27日"
            android:textSize="@dimen/text_14"
            android:textColor="@color/text_yellow"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/x11"
        android:paddingTop="@dimen/y5"
        android:paddingBottom="@dimen/y8">
        <ImageView
            android:id="@+id/iv_newslist_icon"
            android:layout_width="@dimen/x4"
            android:layout_height="@dimen/y20"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/y6"
            android:paddingBottom="@dimen/y4"
            android:src="@drawable/ic_home_newslist"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_newslist_icon"
            android:layout_marginLeft="@dimen/x5"
            android:text="最新资讯"
            android:textSize="@dimen/text_20"
            android:textColor="@color/text_yellow"/>
    </RelativeLayout>

</LinearLayout>