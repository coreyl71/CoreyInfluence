<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray_home"
    tools:context="com.dlab.coreyinfluence.fragment.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/text_yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y10"
            android:text="我的"
            android:textSize="@dimen/text_18"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <!--个人信息栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y87"
        android:background="@color/white">

        <com.dlab.coreyinfluence.utils.CircleImageView
            android:id="@+id/civ_my_head"
            android:layout_width="@dimen/x67"
            android:layout_height="@dimen/x67"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/civ_my_head"
            android:layout_marginLeft="@dimen/x17"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corey"
                android:textSize="@dimen/text_14"
                android:textColor="@color/main_black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您已贡献"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_main_gray"/>

                <TextView
                    android:id="@+id/tv_my_vote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="71"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_main_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="票，票权为"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_main_gray"/>

                <TextView
                    android:id="@+id/tv_my_vote_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_main_gray"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white">

        <!--资产管理RL-->
        <RelativeLayout
            android:id="@+id/rl_my_property"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44">

            <ImageView
                android:id="@+id/iv_my_property"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/vector_ic_my_property"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_my_property"
                android:layout_marginLeft="@dimen/x16"
                android:text="资产管理"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x17"
                android:src="@drawable/vector_ic_last_step"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@color/bg_gray_home"/>

        <!--我的交易RL-->
        <RelativeLayout
            android:id="@+id/rl_my_deal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44">

            <ImageView
                android:id="@+id/iv_my_deal"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/vector_ic_my_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_my_deal"
                android:layout_marginLeft="@dimen/x16"
                android:text="我的交易"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x17"
                android:src="@drawable/vector_ic_last_step"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/bg_gray_home"/>

        <!--我的关注RL-->
        <RelativeLayout
            android:id="@+id/rl_my_favorite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44">

            <ImageView
                android:id="@+id/iv_my_favorite"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/vector_ic_my_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_my_favorite"
                android:layout_marginLeft="@dimen/x16"
                android:text="我的关注"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x17"
                android:src="@drawable/vector_ic_last_step"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/bg_gray_home"/>

        <!--我的兑换RL-->
        <RelativeLayout
            android:id="@+id/rl_my_exchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44">

            <ImageView
                android:id="@+id/iv_my_exchange"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/vector_ic_my_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_my_exchange"
                android:layout_marginLeft="@dimen/x16"
                android:text="我的兑换"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x17"
                android:src="@drawable/vector_ic_last_step"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/bg_gray_home"/>

        <!--我的银行卡RL-->
        <RelativeLayout
            android:id="@+id/rl_my_bankcard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44">

            <ImageView
                android:id="@+id/iv_my_bankcard"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:src="@drawable/vector_ic_my_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_my_bankcard"
                android:layout_marginLeft="@dimen/x16"
                android:text="我的银行卡"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x17"
                android:src="@drawable/vector_ic_last_step"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x24"/>
        </RelativeLayout>

    </LinearLayout>

    <!--设置RL-->
    <RelativeLayout
        android:id="@+id/rl_my_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:layout_marginTop="@dimen/x9"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_my_setting"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x20"
            android:src="@drawable/vector_ic_my_setting"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_my_setting"
            android:layout_marginLeft="@dimen/x16"
            android:text="设置"
            android:textSize="@dimen/text_16"
            android:textColor="@color/text_black"/>

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x17"
            android:src="@drawable/vector_ic_last_step"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x24"/>
    </RelativeLayout>

</LinearLayout>
